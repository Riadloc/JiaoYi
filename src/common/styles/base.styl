primaryColorA = #03a9f4
primaryColorB = #222222
primaryColorC = #F5F5F5

body, html
  height 100%
  line-height: 1
  font-weight: 200
  font-family: 'Microsoft YaHei UI','PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif

.v-spinner
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)

.mu-appbar-title
  text-align center

.card-zone
  font-size 0
  &>:last-child
    margin-bottom 0
  &>li
    display flex
    width 100%
    height 130px
    margin-bottom 10px
    padding 15px
    background #fff
    border-radius .3rem
    border-bottom .027rem solid #d0d0d0
    .picture
      display inline-block
      flex 0 0 100px
      vertical-align top
    .content-wrapper
      display inline-block
      flex 1
      line-height 30px
      padding-left 10px
      .card-header
        height 32px
        display flex
        .avatar
          display inline-block
          vertical-align top
          width 32px
          height 32px
          margin-right 2px
          border-radius 50%
        .sellerInfo
          flex 1
          display inline-block
          line-height 16px
          .nickname,.region
            display block
            font-size 12px
      .price
        /*float right*/
        color red
        font-size 1rem
      .description
        line-height 20px
        margin-top 14px
        font-size 14px
        font-weight bold

.mu-infinite-scroll
  height 20px!important
  line-height 20px!important

.about, .details, #login, .publish, #region, #register, .setting, .user, .collect, .qiugou
  padding-top 3.5rem

border-1px($color)
  ::after
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    content ' '

add-title($title)
  position relative
  &::after
    display block
    position absolute
    left 15px
    bottom -20px
    content $title

@media screen and (min-width: 320px) {
  html {font-size: 14px;}
}

@media screen and (min-width: 360px) {
  html {font-size: 16px;}
}

@media screen and (min-width: 400px) {
  html {font-size: 18px;}
}

@media screen and (min-width: 440px) {
  html {font-size: 20px;}
}

@media screen and (min-width: 480px) {
  html {font-size: 22px;}
}

@media screen and (min-width: 640px) {
  html {font-size: 28px;}
}

